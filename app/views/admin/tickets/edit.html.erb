<div class="row">
  <div class="col-sm-6">
    <h1>
      Edit Ticket <small><%=  "- id: #{@ticket.id}" %></small>
    </h1>
    <p><%= link_to "Back to Tickets", admin_tickets_path %></p>

    <%= form_for [:admin, @ticket], :html => { :role => "form" } do |f| %>

    <div class="form-group">
      <%= f.label :first_name %>
      <div class="row">
        <div class="col-sm-8">      
          <%= f.text_field :first_name, class: "form-control" %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <div class="row">
        <div class="col-sm-8">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-8">
        <p>
          <%= f.submit "Update Ticket", class: "btn btn-danger" %>
        </p>
      </div>
    </div>    
    
    <% end %>

    <div class="row">
      <div class="col-sm-6">
        <p>
          <%= link_to("Delete ticket", "/admin/tickets/#{@ticket.id}", method: :delete, class: "btn btn-danger") %>
        </p>
      </div>
    </div>
  </div>
</div>
