<div class="row">
  <div class="col-sm-8">
    <h1>
      Edit User <small><%= "#{@user.email} - id: #{@user.id}" %></small>
    </h1>
    <p><%= link_to "Back to Users", admin_users_path %></p>

    <%= form_for [:admin, @user], :html => { :role => "form" } do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <div class="row">
        <div class="col-sm-8">      
          <%= f.email_field :email, class: "form-control" %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :first_name %>
      <div class="row">
        <div class="col-sm-8">
          <%= f.text_field :first_name,  class: "form-control", id:"firstNameField" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <div class="row">
        <div class="col-sm-8">
          <%= f.text_field :last_name,  class: "form-control", id:"lastNameField"%>
        </div>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :college %>
      <div class="row">
        <div class="col-sm-8">
          <%= f.select(:college, options_for_college, {},  {class: "form-control"})%>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <div class="row">
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <div class="row">
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>
    
    <% unless current_user.id == @user.id %>
    <div class="checkbox form-group">
      <%= f.check_box :locked %> <%= f.label :locked, "Is Locked?" %>
    </div>
    
    <div class="checkbox form-group">
      <%= f.check_box :admin %> <%= f.label :admin, "Is Admin?" %>
    </div>    
    <% end %>

    <div class="row">
      <div class="col-sm-8">
        <p>
          <%= f.submit "Update user", class: "btn btn-primary" %>
        </p>
      </div>
    </div>    
    
    <div class="row">
      <div class="col-sm-12">
        <p>
          <%= link_to("Add ticket", "/admin/users/#{@user.id}/tickets/new", class: "btn btn-primary") %>
        </p>
      </div>
    </div>    

    <div class="row">
      <div class="col-sm-8">
        <p>
          <%= link_to("Delete user", "/admin/users/#{@user.id}", method: :delete, class: "btn btn-danger") %>
        </p>
      </div>
    </div>    
    <% end %>

  </div>
</div>
