<div class="row">
  <div class="col-sm-8">
    <h1>Edit ticket</h1>
      <%= form_for @ticket, url: {:action => "update", :id => @id}, html: { id: "ticketEdit" + @id } do |f| %>
        <div class="form-group">
          <%= f.label :first_name %>
          <div class="row">
            <div class="col-sm-8">
              <%= f.text_field :first_name, :autofocus => true, class: "form-control" %>
            </div>
          </div>
        </div>
  
        <div class="form-group">
          <%= f.label :last_name %>
          <div class="row">
            <div class="col-sm-8">
              <%= f.text_field :last_name, :autofocus => true, class: "form-control" %>
            </div>
          </div>
        </div>
  
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <% end %>
  </div>
</div>
