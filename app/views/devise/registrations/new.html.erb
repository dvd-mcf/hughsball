<div class="container">
<div class="row">
  <div class="col-xs-12 col-sm-6">
    <h1>Sign up</h1>

    <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f| %>

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %> <i><small>(must be from Oxford) </small></i>
        <div class="row">
          <div class="col-sm-12">
            <%= f.email_field :email, class: "form-control", id:"emailField" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :first_name %>
        <div class="row">
          <div class= "col-sm-12">
            <%= f.text_field :first_name, class: "form-control", id:"firstNameField" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <div class="row">
          <div class= "col-sm-12">
            <%= f.text_field :last_name, class: "form-control", id:"lastNameField" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :college %>
        <div class="row">
          <div class "col-sm-12">
            <%= f.select(:college, options_for_college, {},  {class: "form-control"})%>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class= "col-sm-12">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-12">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>


      <%= render "devise/shared/links" %>

  </div>
<div class="hidden-xs col-sm-6">
  <div  id="signupbox">
<p id= "signuptext" class="pagination-centered"> Create an account here, and we'll let you know as soon as tickets are available.</p>
</div>
  </div>
  </div>
</div>
